{
  "framework": "vite",
  "installCommand": "npm install --no-save --legacy-peer-deps --ignore-scripts",
  "buildCommand": "node post-install.cjs && npm run build",
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "npm install --no-save --legacy-peer-deps --ignore-scripts",
        "buildCommand": "node post-install.cjs && npm run build"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "github": {
    "silent": true
  }
}
